<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="這是主畫面"
        android:id="@+id/textview_main"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35"

        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="啟動第二活動"
        android:id="@+id/buttonStartActivity_1"
        app:layout_constraintLeft_toLeftOf="@id/textview_main"
        app:layout_constraintTop_toBottomOf="@id/textview_main"
/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="啟動第三活動"
        android:id="@+id/buttonStartActivity_2"
        app:layout_constraintLeft_toLeftOf="@id/buttonStartActivity_1"
        app:layout_constraintTop_toBottomOf="@id/buttonStartActivity_1"
        />


</androidx.constraintlayout.widget.ConstraintLayout>